{
	"extends": [
		"airbnb-base",
		"plugin:prettier/recommended",
		"plugin:jest-formatting/recommended"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2020
	},
	"rules": {
		"require-jsdoc": "off",
		"no-console": "off",
		"no-plusplus": [
			"error",
			{
				"allowForLoopAfterthoughts": true
			}
		],
		"no-underscore-dangle": [
			"error",
			{
				"allow": [
					"_id"
				]
			}
		],
		"max-len": [
			"error",
			{
				"code": 120,
				"ignoreUrls": true,
				"ignoreStrings": true
			}
		],
		"class-methods-use-this": "off"
	},
	"globals": {
		"logger": false
	},
	"env": {
		"jest/globals": true
	},
	"plugins": [
		"jest-formatting",
		"jest"
	]
}